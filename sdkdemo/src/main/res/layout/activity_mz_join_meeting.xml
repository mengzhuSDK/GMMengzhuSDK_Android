<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/mz_join_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="13dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:scaleType="center"
            android:src="@mipmap/ic_icon_back" />

        <TextView
            android:id="@+id/mz_join_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="加入会议"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_join_meeting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/icon_videoconferencing"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:src="@mipmap/icon_mengzhu_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="395dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_ffffff_radius_4"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/et_video_conferencing_number"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/shape_f3f3f3_radius_50"
                    android:hint="请输入房间号"
                    android:paddingLeft="22dp"
                    android:textColor="#2B2B2B"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_video_conferencing_password"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_f3f3f3_radius_50"
                    android:hint="请输入密码"
                    android:paddingLeft="22dp"
                    android:textColor="#2B2B2B"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="4dp"
                    android:text="（如会议未加密可不填）"
                    android:textColor="#9B9B9B"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="不自动链接语音"
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_video_conferencing_is_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selector_check" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFF4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="保持摄像头关闭"
                        android:textColor="#4A4A4A"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_video_conferencing_is_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selector_check" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:id="@+id/tv_video_conferencing_join"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/shape_ff5b29_radius_50"
                        android:gravity="center"
                        android:text="加入会议"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="更多会议功能请前往PC下载盟主客户端体验"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>