<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="292dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pop_add_user_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="新增用户"
            android:textColor="@color/color_2b2b2b"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pop_phone_edit"
            android:layout_width="290dp"
            android:layout_height="168dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pop_add_user_edit_bg"
            android:gravity="top"
            android:hint="请输入用户手机号，多个手机号用英文逗号（,）隔开"
            android:padding="14dp"
            android:textColor="@color/color_2b2b2b"
            android:textColorHint="@color/color_7a7a7a"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:background="@drawable/pop_cancel_btn_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ff1f60"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pop_sure_btn_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>