<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="189dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pop_add_user_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="33dp"
            android:text="请输入新增F码数量"
            android:textColor="@color/color_2b2b2b"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@mipmap/icon_add1" />

            <EditText
                android:id="@+id/pop_num_edit"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/pop_add_user_edit_bg"
                android:gravity="center"
                android:inputType="number"
                android:text="1"
                android:textColor="@color/color_2b2b2b"
                android:textColorHint="@color/color_7a7a7a"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_subtract"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:src="@mipmap/icon_subtract_not" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:background="@drawable/pop_cancel_btn_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ff1f60"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pop_sure_btn_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>