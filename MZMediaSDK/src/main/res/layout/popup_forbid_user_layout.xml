<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="245dp"
        android:layout_height="315dp"
        android:background="@drawable/bg_forbid_user_layoutl"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_30">

        <com.mengzhu.app.library.widgets.CircleImageView
            android:id="@+id/cv_popup_forbid_user_avatar"
            android:layout_width="@dimen/dimen_90"
            android:layout_height="@dimen/dimen_90"
            android:src="@mipmap/icon_default_avatar" />

        <TextView
            android:id="@+id/tv_popup_forbid_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_11"
            android:textColor="#333333"
            android:textSize="16sp"
            tools:text="确认要将美美的小财神踢出吗？" />

        <TextView
            android:id="@+id/tv_popup_forbid_user_confirm"
            android:layout_width="132dp"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_25"
            android:background="@drawable/bg_forbid_user_confirm"
            android:gravity="center"
            android:text="确认禁言"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/tv_popup_forbid_user_cancel"
            android:layout_width="132dp"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_13"
            android:background="@drawable/bg_forbid_user_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_16sp" />
    </LinearLayout>
</LinearLayout>
