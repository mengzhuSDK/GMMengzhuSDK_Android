<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item_vote_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@drawable/bg_vote_text_item">

        <ProgressBar
            android:id="@+id/progress_item_vote_checked"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:padding="0.5dp"
            android:progress="0"
            android:progressDrawable="@drawable/bg_progress_item_vote_me" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_vote_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14sp" />

            <CheckBox
                android:id="@+id/check_item_vote_checkbox"
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_22"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_17"
                android:layout_marginRight="@dimen/dimen_17"
                android:button="@drawable/selector_vote_check"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:id="@+id/tv_item_vote_num_votes"
                android:layout_width="@dimen/dimen_94"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/dimen_10"
                android:textColor="@color/color_ff2145"
                android:textSize="@dimen/dimen_12sp"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>