<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_is_only_anchor"
        android:layout_width="@dimen/dimen_106"
        android:layout_height="@dimen/dimen_48"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_15"
            android:text="只看老师"
            android:textColor="@color/color_7a7a7a"
            android:textSize="@dimen/dimen_12sp" />

        <ImageView
            android:id="@+id/iv_is_only_anchor_icon"
            android:layout_width="@dimen/dimen_28"
            android:layout_height="@dimen/dimen_16"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_5"
            android:src="@drawable/selector_vote_check" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_48"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_weight="1"
        android:background="@color/white"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_32"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_edittext"
            android:hint="跟主播聊点什么？"
            android:imeOptions="actionSend"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_34"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#7a7a7a"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/mz_activity_input_emoji"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:src="@mipmap/icon_emoji"
            android:visibility="visible" />

    </RelativeLayout>

    <Button
        android:id="@+id/tv_send"
        style="@style/mz_public_button_style"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_40"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:background="@color/color_ff2145"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/white"
        android:visibility="visible" />
</LinearLayout>