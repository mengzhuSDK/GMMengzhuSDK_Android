<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp">


    <LinearLayout
        android:id="@+id/player_chat_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16">

        <com.mzmedia.widgets.CircularImage
            android:id="@+id/player_chat_right_icon"
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:scaleType="fitXY" />

    </LinearLayout>

    <TextView
        android:id="@+id/player_chat_right_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/player_chat_right_layout"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/player_chat_right_layout"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:maxWidth="225.0dip"
        android:maxEms="6"
        android:singleLine="true"
        android:text="name"
        android:textColor="#94a5dd"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_chat_right_username"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="@dimen/dimen_17"
        android:layout_toRightOf="@id/player_chat_right_layout"
        android:background="@drawable/bg_chat_right_item_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/player_chat_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:lineSpacingExtra="2dp"
            android:maxLines="5"
            android:text="content"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/player_chat_gift_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/player_chat_gift_icon"
                android:layout_width="@dimen/dimen_36"
                android:layout_height="@dimen/dimen_24"
                android:layout_marginLeft="@dimen/dimen_4"
                android:layout_marginRight="@dimen/dimen_4" />

            <TextView
                android:id="@+id/player_chat_gift_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/player_chat_gift_icon"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>