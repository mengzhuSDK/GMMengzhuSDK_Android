<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/layout_item_goods"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="100dp"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_margin="@dimen/dimen_12">

        <ImageView
            android:id="@+id/iv_item_goods_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dimen_8"
            android:paddingLeft="@dimen/dimen_6"
            android:background="@drawable/label_item_channel_goods"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dimen_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品商品商品"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_22"
            android:layout_marginBottom="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_goods_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="￥0.00"
                android:textColor="@color/color_ff4141"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_item_goods_buy"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_item_goods_buy_rounded"
                android:gravity="center"
                android:text="去购买"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView style="@style/mz_public_bg_line_style" />
    </LinearLayout>

</LinearLayout>

