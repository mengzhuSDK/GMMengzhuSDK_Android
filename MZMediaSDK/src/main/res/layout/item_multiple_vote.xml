<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_item_multiple_vote"
        android:layout_width="166dp"
        android:layout_height="208dp"
        android:background="@drawable/bg_vote_text_item"
        android:padding="0.5dp">

        <com.mzmedia.widgets.RoundedImageView
            android:id="@+id/item_multiple_vote_iv"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:scaleType="fitXY"
            app:riv_corner_radius_bottom_left="0dp"
            app:riv_corner_radius_bottom_right="0dp"
            app:riv_corner_radius_top_left="@dimen/dimen_2"
            app:riv_corner_radius_top_right="@dimen/dimen_2"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/item_multiple_vote_result_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_28"
            android:layout_alignBottom="@id/item_multiple_vote_iv"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="0ç¥¨"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp" />

        <CheckBox
            android:id="@+id/item_multiple_vote_cb"
            android:layout_width="@dimen/dimen_22"
            android:layout_height="@dimen/dimen_22"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_8"
            android:button="@drawable/selector_vote_check"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_multiple_vote_decs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
            android:layout_below="@id/item_multiple_vote_iv"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:text="@string/app_name"
            android:textColor="@color/color_2b2b2b"
            android:textSize="@dimen/dimen_12sp" />
    </RelativeLayout>

</RelativeLayout>











