<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:civ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mz_handle_user_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:src="@mipmap/icon_channel_detail_close" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3">

            <com.mzmedia.widgets.CircleImageView
                android:layout_width="@dimen/dimen_98"
                android:layout_height="@dimen/dimen_98"
                android:layout_centerInParent="true"
                android:src="@color/transparent"
                civ:border_color="@color/color_ff1f60"
                civ:border_width="1dp" />

            <com.mzmedia.widgets.CircleImageView
                android:id="@+id/civ_user_avatar"
                android:layout_width="@dimen/dimen_93"
                android:layout_height="@dimen/dimen_93"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_default_avatar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:textColor="#595959"
            android:textSize="@dimen/dimen_18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kick_out"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:background="@drawable/mz_kick_out_btn_bg"
                android:gravity="center"
                android:text="踢出"
                android:textColor="#ff1f60"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ban_chat"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mz_ban_chat_btn_bg"
                android:gravity="center"
                android:text="禁言"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>