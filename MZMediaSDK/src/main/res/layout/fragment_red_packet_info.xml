<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="344dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/bg_red_packet_dialog"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/mz_icon_close_red_packet_dialog" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="31dp"
            android:layout_marginRight="@dimen/dimen_20"
            android:orientation="horizontal">

            <com.mzmedia.widgets.CircleImageView
                android:id="@+id/civ_user_avatar"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_8" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#EFCE73"
                android:textSize="@dimen/dimen_14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_12"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#EFCE73"
            android:textSize="@dimen/dimen_18sp" />

        <TextView
            android:id="@+id/tv_finish_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_44"
            android:layout_marginRight="@dimen/dimen_12"
            android:gravity="center"
            android:maxLines="1"
            android:text="手慢了，红包已抢完"
            android:textColor="#EFCE73"
            android:textSize="@dimen/dimen_20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_overdue_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_48"
            android:layout_marginRight="@dimen/dimen_12"
            android:gravity="center"
            android:maxLines="1"
            android:text="该红包超过24小时已过期"
            android:textColor="#EFCE73"
            android:textSize="@dimen/dimen_20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_amount_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_28"
            android:layout_marginRight="@dimen/dimen_12"
            android:gravity="center"
            android:maxLines="1"
            android:text="该红包超过24小时已过期"
            android:textColor="#EFCE73"
            android:textSize="42sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_history_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_93"
            android:layout_marginRight="@dimen/dimen_12"
            android:autoLink="all"
            android:gravity="center"
            android:maxLines="1"
            android:text="查看抢红包记录"
            android:textColor="#EFCE73"
            android:textSize="@dimen/dimen_12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_open_red_packet"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_65"
            android:src="@mipmap/mz_icon_open_red_packet"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>