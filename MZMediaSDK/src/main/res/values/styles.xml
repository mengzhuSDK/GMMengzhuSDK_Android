<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- 屏幕宽高比选项 -->
    <style name="AspectRatioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/aspect_btn_height</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:button">@null</item>
    </style>


    <style name="TransparentPushDialog" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="mz_public_bg_line_style">
        <item name="android:background">@color/color_dddddd</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--直播间弹窗dialog标题样式-->
    <style name="bottom_watch_dialog_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_12</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <!--直播间弹窗dialog关闭按钮样式-->
    <style name="bottom_watch_dialog_close_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:src">@mipmap/icon_channel_detail_close</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="MengZhuDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mz_public_button_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">@dimen/dimen_40</item>
    </style>

    <style name="Transparents">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>

    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/dialog_in_no_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/dialog_out_no_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/dialog_in_no_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/dialog_out_no_anim</item>
    </style>

</resources>
